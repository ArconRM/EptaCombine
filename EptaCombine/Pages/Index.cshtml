@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}
@Html.AntiForgeryToken()

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="stylesheet" href="~/css/index.css"/>

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold animate-pop">Дети быстрые, но Комбайн быстрее</h1>
    </div>

    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 50vh;">
        <a href="/FileConverter" class="btn btn-outline-primary btn-lg shadow transition-hover mb-3">
            Перейти к конвертации файлов
        </a>

        <a href="/LatexCompiler" class="btn btn-outline-primary btn-lg shadow transition-hover mb-3">
            Перейти к латеху
        </a>
        
        <a href="/CodeRunner" class="btn btn-outline-primary btn-lg shadow transition-hover mb-3">
            Перейти к проге
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/index.js?v=@DateTime.Now.Ticks"></script>
}